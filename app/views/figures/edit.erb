<h2>Edit Your Figure</h2>

<form method="post" action="/figures/<%=@figure.id%>" >
<input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name"></label>
  <input type="text" name="figure[name]" placeholder="Figure Name" id="figure_name" value="<%=@figure.name%>" >

  <label for="new_landmark"></label>
  <input type="text" name="landmark[name]" placeholder="New Landmark" id="new_landmark" value="<%=@figure.landmarks.name%>">

  <label for="new_title"></label>
  <input type="text" name="title[name]" placeholder="New Title" id="new_title">

  <br></br>
  <h4>Or Choose Existing</h4>
  <label for="figure_title_ids"></label>
  <p>Titles: </p>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
    <%= title.name %></input>
  <%end%>

  <br></br>

  <label for="figure_landmark_ids"></label>
  <p>Landmarks: </p>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>>
    <%= landmark.name %></input>
  <%end%>

<br></br>
  <input type = "submit" value = "Edit Figure">
</form>

<br></br>
  <a href="/figures">See all figures here</a>
