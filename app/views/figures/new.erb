<h2>Create Your Figure</h2>

<form method="post" action="/figures" >

  <label for="figure_name"></label>
  <input type="text" name="figure[name]" placeholder="Figure Name" id="figure_name">

  <label for="new_landmark"></label>
  <input type="text" name="landmark[name]" placeholder="New Landmark" id="new_landmark">

  <label for="new_title"></label>
  <input type="text" name="title[name]" placeholder="New Title" id="new_title">

  <br></br>
  <h4>Or Choose Existing</h4>
  <label for="figure_title_ids"></label>
  <p>Titles: </p>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
    <%= title.name %></input>
  <%end%>

  <br></br>

  <label for="figure_landmark_ids"></label>
  <p>Landmarks: </p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
    <%= landmark.name %></input>
  <%end%>

<br></br>
  <input type = "submit" value = "Create New Figure">
</form>

<br></br>
  <a href="/figures">See all figures here</a>
